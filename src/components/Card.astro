---
export interface Props {
	title: string;            // ex: "Stagiaire programmeur-analyste, CDID, Saint-George"
	period: string;           // ex: "Janvier 2024 — Mai 2024"
	description?: string;     // phrase d'intro si tu veux
	tasks?: string[];         // liste de responsabilités
	project?: string[];       // liste de réalisations de projet
}

const { title, period, description, tasks = [], project = [] } = Astro.props;
---

<div
	class="shadow-lapis-lazuli-800 dark:bg-dark-600 mx-10 mt-10 h-auto rounded-lg bg-white px-4 py-12 shadow-lg sm:w-full md:w-64 lg:w-72 xl:w-96"
>
	<h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-gray-100">
		{title}
	</h2>
	<p class="text-gray-500 dark:text-gray-400 text-sm mb-3">{period}</p>

	{description && (
		<p class="text-gray-700 dark:text-gray-300 mb-3">{description}</p>
	)}

	{tasks.length > 0 && (
		<ul class="list-disc list-inside space-y-1 text-gray-700 dark:text-gray-300 mb-3">
			{tasks.map((task) => (
				<li>{task}</li>
			))}
		</ul>
	)}

	{project.length > 0 && (
		<div class="mt-2">
			<h3 class="text-gray-900 dark:text-gray-100 font-semibold mb-1">Projet de stage :</h3>
			<ul class="list-disc list-inside space-y-1 text-gray-700 dark:text-gray-300">
				{project.map((item) => (
					<li>{item}</li>
				))}
			</ul>
		</div>
	)}
</div>
