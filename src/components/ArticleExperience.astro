---
export interface Props {
	title: string;
	href: string;
}
import Card from "./Card.astro";
import { getLangFromUrl } from "../i18n/utils";
import uiJson from "../data/ui.json";

const lang = getLangFromUrl(Astro.url);
const experiences = uiJson[lang].experience.experiencesList;
const { title, href } = Astro.props;
---

<section id={href}>
	<div class="font-futura-pt my-24 py-40 text-black dark:text-white">
		<div class="container mx-auto px-4">
			<div class="flex flex-col items-center justify-center">
				<h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
					{title}
				</h1>
				<div
					data-astro-prefetch="hover"
					class="flex flex-wrap justify-center gap-8"
				>
					{experiences.map((exp) => (
						<Card
							title={`${exp.title} - ${exp.role}`}
							description={exp.period}
							tasks={exp.tasks}
							project={exp.project}
						/>
					))}
				</div>
			</div>
		</div>
	</div>
</section>
