---
export interface Props {
    title: string;
    href: string;
}
import Card from "./Card.astro";
import { getLangFromUrl } from "../i18n/utils";
import uiJson from "../data/ui.json";

const lang = getLangFromUrl(Astro.url);
const experiences = uiJson[lang].experience.experiencesList;
const { title, href } = Astro.props;
---

<section id={href}>
    <div class="my-24 py-40 font-futura-pt text-black dark:text-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col items-center justify-center">
                <h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
                    {title}
                </h1>
                <div class="flex flex-wrap justify-center gap-8">
                    <Card title={experiences[0].title} description={experiences[0].description} />
                    <Card title={experiences[1].title} description={experiences[1].description} />
                </div>
            </div>
        </div>
    </div>
</section>
