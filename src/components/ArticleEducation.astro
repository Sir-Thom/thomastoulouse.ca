---
export interface Props {
	title: string;
	href: string;
}

import Card from "./Card.astro";
import { getLangFromUrl } from "../i18n/utils";
import uiJson from "../data/ui.json";

const lang = getLangFromUrl(Astro.url);
const education = uiJson[lang].education.educationsList;
const { title, href } = Astro.props;
---

<section id={href}>
	<div class="font-futura-pt my-24 pb-10 text-black dark:text-white">
		<div class="container mx-auto px-4">
			<div class="flex flex-col items-center justify-center">
				<h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
					{title}
				</h1>
				<div class="flex flex-wrap justify-center gap-8">
					{education.map((edu) => <Card title={edu.title} description={edu.description} />)}
				</div>
			</div>
		</div>
	</div>
</section>
