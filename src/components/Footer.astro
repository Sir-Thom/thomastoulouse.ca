---
export interface Props {
    title: string;
    subtitle1: string;
    subtitle2: string;
    subtitle3: string;
    subtitle4: string;
    subtitle5: string;
    phone: string;
    email: string;
}
import ContactMe from "./react/ContactMe";

const {
    title,
    subtitle1,
    subtitle2,
    subtitle3,
    subtitle4,
    subtitle5,
    phone,
    email,
} = Astro.props;
---

<footer
    class="dark:bg-dark-800 h-auto dark:text-white text-black bg-light-500 py-10"
>
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <div class="mb-4 md:mb-0">
                <span class="text-2xl font-bold dark:text-white text-black"
                    >{title}</span
                >
            </div>
            <div class="flex flex-wrap mt-4 md:mt-0">
                <a
                    href="#apropos"
                    class="dark:text-white text-black hover:text-LapisLazuli-400 px-3 py-2"
                    >{subtitle1}</a
                >
                <a
                    href="#skillSection"
                    class="dark:text-white text-black hover:text-LapisLazuli-400 px-3 py-2"
                    >{subtitle2}</a
                >
                <a
                    href="#experienceSection"
                    class="dark:text-white text-black hover:text-LapisLazuli-400 px-3 py-2"
                    >{subtitle3}</a
                >
                <a
                    href="#educationSection"
                    class="dark:text-white text-black hover:text-LapisLazuli-400 px-3 py-2"
                    >{subtitle4}</a
                >
                <a
                    href="#projectSection"
                    class="dark:text-white text-black hover:text-LapisLazuli-400 px-3 py-2"
                    >{subtitle5}</a
                >
            </div>
            <div class="mt-2 flex items-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="1em"
                    viewBox="0 0 512 512"
                    fill="currentColor"
                    ><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                    <path
                        d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
                    ></path></svg
                >
                <span class="ml-2 dark:text-white text-black">{phone}</span>
            </div>
            <div class="mt-2 flex items-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    height="1em"
                    viewBox="0 0 512 512"
                    fill="currentColor"
                    ><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                    <path
                        d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"
                    ></path></svg
                >
                <span class="ml-2 mr-4 dark:text-white text-black">{email}</span
                >
                <ContactMe client:visible />
            </div>
        </div>
    </div>
</footer>
