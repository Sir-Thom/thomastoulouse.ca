---
export interface Props {
	title: string;
	subtitle1: string;
	subtitle2: string;
	subtitle3: string;
	subtitle4: string;
	subtitle5: string;
	phone: string;
	email: string;
	license: string;
	source: string;
}
import { getLangFromUrl, getLicenseURL } from "../i18n/utils";

const {
	title,
	subtitle1,
	subtitle2,
	subtitle3,
	subtitle4,
	subtitle5,
	phone,
	email,
	license,
	source
} = Astro.props;
const lang: any = getLangFromUrl(Astro.url).toString();
const licenseURL = getLicenseURL(lang);
---

<footer class="bg-light-500 dark:bg-dark-800 h-auto py-10 font-sans  text-black dark:text-white">
	<div class="container mx-auto px-4">
		<div class="flex flex-col items-center justify-between md:flex-row">
			<div class="mb-4 md:mb-0">
				<span class="justify-center text-center text-2xl font-bold text-black dark:text-white"
					>{title}</span
				>
				<div class="mt-2 mb-4 flex items-center text-center">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						height="1em"
						fill="currentColor"
						viewBox="0 0 576 512"
