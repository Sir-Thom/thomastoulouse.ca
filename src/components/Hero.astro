---
export interface Props {
	titleMain: string;
	body: string;
	href: string;
	subtitle: string;
}
import ComputerViewer from "./react/ComputerViewer";

const { href, titleMain, subtitle, body } = Astro.props;
---

<section id={href}>
	<div
		class="bg-light-500 font-futura-pt shadow-LapisLazuli-800 dark:bg-dark-500 mb-10 py-20 shadow-lg dark:text-white"
	>
		<div class="container mx-auto my-12 flex flex-col items-center md:my-24 md:flex-row">
			<div class="flex w-full flex-col items-start justify-center p-8 lg:w-1/2">
				<h1 class="mb-4 text-4xl font-bold tracking-tight md:text-6xl">
					{titleMain}
				</h1>
				<h2
					class="from-accent-1 to-accent-2 mb-6 bg-gradient-to-r bg-clip-text text-2xl leading-relaxed font-bold text-transparent md:text-4xl md:leading-snug"
				>
					{subtitle}
				</h2>
				<p
					class="text-justify text-lg leading-relaxed transition-all duration-200 ease-in-out dark:text-neutral-200"
				>
					{body}
				</p>
			</div>
			<div class="mt-6 mb-6 flex w-full justify-center md:mt-0 md:mb-0 lg:w-1/2">
				<div class="h-auto px-8">
					<div class="h-64 w-64 xl:h-80 xl:w-80">
						<ComputerViewer client:only="react" />
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
