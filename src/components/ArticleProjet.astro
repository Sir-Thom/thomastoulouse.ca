---
export interface Props {
	title: string;
	href: string;
}
import { IProject } from "../interfaces/IProjectCard";

import { getLangFromUrl } from "../i18n/utils";
import ProjectList from "../components/react/ProjectList";
import projectsJson from "../data/ui.json";

const lang = getLangFromUrl(Astro.url).toString();
const { title, href } = Astro.props;
const projects: Array<IProject> = projectsJson[lang].project.projectsList;
---

<section id={href}>
	<div class="font-sans mt-10 py-40 text-black dark:text-white">
		<div class="container mx-auto px-4">
			<div class="flex flex-col items-center justify-center">
				<h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
					{title}
				</h1>
				<ProjectList projects={projects} client:visible />
			</div>
		</div>
	</div>
</section>
